<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="disgust"
            type="com.freetreechair.domain.disgust.model.UIDisgust" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_disgust"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            app:setImageSource="@{disgust.imageUrl}"
            tools:src="@drawable/img_dakbal" />

        <TextView
            android:id="@+id/tv_disgust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@{disgust.name}"
            android:textAppearance="@style/caption_1"
            android:textStyle="bold"
            tools:text="닭발" />

    </LinearLayout>

</layout>
